{
    "ignore:id": 1,
    "ignore:name": "bitcoin",
    "ignore:description": "The service in charge of gathering information about bitcoin.",
    "service": {
        "ignore:id": 4,
        "input:url_extra": "/v1/bpi/currentprice.json",
        "drop:url_params": {
            "input:additional_params": ""
        },
        "body": {
            "input:additional_body": ""
        },
        "drop:method": [
            "default:GET",
            "opt:POST",
            "opt:PUT",
            "opt:PATCH",
            "opt:DELETE",
            "opt:HEAD",
            "opt:OPTIONS"
        ],
        "header": {
            "input:additional_header": ""
        },
        "response": {
            "int:code": [
                "default:200",
                "min:100",
                "max:500"
            ],
            "input:response_content": "$ref{body.time.updatedISO}"
        },
        "drop:verification_operator": [
            "opt:==",
            "opt:===",
            "opt:eq",
            "opt:-eq",
            "opt:!=",
            "opt:<>",
            "opt:ne",
            "opt:-ne",
            "opt:<",
            "opt:lt",
            "opt:-lt",
            "opt:>",
            "opt:gt",
            "opt:-gt",
            "opt:<=",
            "opt:le",
            "opt:-le",
            "default:>=",
            "opt:ge",
            "opt:-ge",
            "opt:<=>",
            "opt:equal to",
            "opt:less than",
            "opt:not equal to",
            "opt:greater than",
            "opt:less than or equal to",
            "opt:greater than or equal to"
        ],
        "time:verification_value": "$ref{secrets.now_utc}",
        "vars": {
            "currency": "$ref{body.bpi}",
            "cost": "$ref{header.Age}"
        }
    }
}
